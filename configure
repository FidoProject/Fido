#!/bin/bash
set -e # to quit on errors
# This script will install the fido compiler and library on a Unix based system.

for var in "$@"
do
	if [[ "$var" == "-noSFML" ]]; then
		rm -r src/Simulator
		rm -r include/Simulator
		rm tests/simulator.cpp
	elif [[ "$var" == "--enable-GCOV" ]]; then
		COVER=YES
		export COVER
	fi
done
